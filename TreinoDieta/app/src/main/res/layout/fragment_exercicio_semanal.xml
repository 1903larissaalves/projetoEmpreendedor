<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ExercicioSemanalFragment">

    <LinearLayout
        android:id="@+id/linearLayoutTipoExercicio"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:orientation="horizontal"
        android:gravity="bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo Exercicio"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="top|center"
        android:id="@+id/txt_tipoExercicio"
        />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutListaExercicios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTipoExercicio">


    <TextView
        android:id="@+id/txt_listaExercicios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="LISTA EXERCICIOS"
        android:textSize="24sp"
        android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>